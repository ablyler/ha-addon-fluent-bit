{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "dependencyDashboard": true,
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["^fluent-bit/Dockerfile$"],
            "matchStrings": [
                "#\\s*renovate:\\s*?(release=(?<release>.*?))?\\s*depName=(?<depName>.*?)?\\sENV .*?_VERSION=\"(?<currentValue>.*)\""
            ],
            "registryUrlTemplate": "https://packages.fluentbit.io/debian?{{#if release }}release={{release}}{{else}}suite=stable{{/if}}&components=main&binaryArch=all",
            "datasourceTemplate": "deb"
        }
    ]
  }